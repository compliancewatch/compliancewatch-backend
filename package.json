{
  "name": "compliancewatch-backend",
  "version": "1.0.0",
  "main": "src/railway-start.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node src/railway-start.js",
    "scrape": "node -e \"import('./src/railway-start.js').then(m => m.runAllScrapers())\"",
    "scrape-regulatory": "node -e \"import('./src/railway-start.js').then(m => m.runScrapersByType(await import('./config/targets.js').then(t => t.REGULATORY_TARGETS), 'regulatory'))\"",
    "scrape-business": "node -e \"import('./src/railway-start.js').then(m => m.runScrapersByType(await import('./config/targets.js').then(t => t.BUSINESS_TARGETS), 'business'))\"",
    "scrape-crypto": "node -e \"import('./src/railway-start.js').then(m => m.runScrapersByType(await import('./config/targets.js').then(t => t.CRYPTO_TARGETS), 'crypto'))\"",
    "scrape-fatf": "node -e \"import('./src/scrapers/fatf.js').then(m => m.runScraper())\"",
    "test": "node src/scripts/test-system.js",
    "healthcheck": "node -e \"import('./src/services/database.js').then(db => db.testConnection())\"",
    "build": "npm ci --omit=dev",
    "logs": "railway logs",
    "status": "railway status"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.8",
    "axios": "^1.6.2",
    "dotenv": "^17.0.0",
    "express": "^4.18.2",
    "node-cron": "^3.0.2",
    "puppeteer": "19.11.1",
    "telegraf": "^4.12.2",
    "winston": "^3.11.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": ["last 1 chrome version"],
    "development": ["last 1 chrome version"]
  }
}
